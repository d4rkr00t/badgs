{
  "name": "badgs",
  "version": "1.0.0",
  "description": "Badges generator",
  "main": "lib/index.js",
  "license": "MIT",
  "repository": "d4rkr00t/badgs",
  "scripts": {
    "audit": "nsp package",
    "build": "babel -d ./ ./src",
    "check": "npm run audit && npm outdated --depth 0",
    "cov": "babel-node ./node_modules/.bin/isparta cover --report lcovonly --report html _mocha -- test/*.test.js -r test/setup.js",
    "coveralls": "npm run cov && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "generate": "babel-node test/generate",
    "lint": "eslint src test",
    "readme": "node ./node_modules/node-readme/bin/node-readme.js",
    "test": "mocha test/*.test.js -r babel/register -r test/setup.js",
    "validate": "npm run lint && npm test",
    "prepare": "npm run validate && npm run check && npm run readme && npm run build",
    "pp": "npm run prepare"
  },
  "bin": {
    "badgs": "bin/cli.js"
  },
  "keywords": [
    "badges",
    "svg",
    "generator"
  ],
  "author": {
    "name": "Stanislav Sysoev",
    "email": "d4rkr00t@gmail.com",
    "url": "http://github.com/d4rkr00t"
  },
  "pre-commit": [
    "lint"
  ],
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-eslint": "^4.0.7",
    "chai": "^3.2.0",
    "cz-conventional-changelog": "^1.1.4",
    "coveralls": "^2.11.4",
    "eslint": "^1.1.0",
    "isparta": "^3.0.3",
    "mocha": "^2.2.5",
    "mocha-lcov-reporter": "1.0.0",
    "node-readme": "^0.1.8",
    "nsp": "^1.0.3",
    "pre-commit": "^1.1.1",
    "supertest": "^1.0.1"
  },
  "czConfig": {
    "path": "./node_modules/cz-conventional-changelog"
  }
}
